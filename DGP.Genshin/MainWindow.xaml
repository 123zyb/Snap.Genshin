<Window x:Class="DGP.Genshin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGP.Genshin"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        xmlns:helper="clr-namespace:DGP.Genshin.Helper" 
        xmlns:pages="clr-namespace:DGP.Genshin.Pages" xmlns:controls="clr-namespace:DGP.Genshin.Controls"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        ui:TitleBar.IsBackButtonVisible="{Binding ElementName=ContentFrame,Path=CanGoBack,Mode=OneWay}"  
        mc:Ignorable="d"
        Title="Snap原神" 
        MinWidth="800"
        MinHeight="562"
        Height="562" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ui:NavigationView 
            x:Name="NavView" 
            OpenPaneLength="160" 
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed" 
            PaneDisplayMode="Auto">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="首页" helper:NavHelper.NavigateTo="{x:Type pages:HomePage}" Icon="Home"/>
                <ui:NavigationViewItem Content="伤害计算" helper:NavHelper.NavigateTo="{x:Type pages:HomePage}" Icon="Calculator"/>
                <ui:NavigationViewItem Content="日常" helper:NavHelper.NavigateTo="{x:Type pages:DailyMaterialPage}" Icon="CalendarDay"/>
                <ui:NavigationViewItem Content="周常" helper:NavHelper.NavigateTo="{x:Type pages:WeeklyMaterialPage}" Icon="CalendarWeek"/>
            </ui:NavigationView.MenuItems>
            <ui:Frame x:Name="ContentFrame">
                <ui:Frame.ContentTransitions>
                    <ui:TransitionCollection>
                        <ui:NavigationThemeTransition/>
                    </ui:TransitionCollection>
                </ui:Frame.ContentTransitions>
            </ui:Frame>
        </ui:NavigationView>
    </Grid>
</Window>
