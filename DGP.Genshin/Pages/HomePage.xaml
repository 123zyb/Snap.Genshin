<Page x:Class="DGP.Genshin.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:DGP.Genshin.Controls"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:s="clr-namespace:DGP.Genshin.Controls.SmoothScrollViewer" xmlns:c="clr-namespace:DGP.Genshin.Controls.CachedImage"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="首页">
    <Page.Resources>
        <DataTemplate x:Key="CharacterTemplate">
            <controls:ContentIcon Width="70" Height="70" 
                                  BadgeUrl="{Binding Element}" 
                                  BackgroundUrl="{Binding Star}" 
                                  ForegroundUrl="{Binding Source}" 
                                  Text="{Binding Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="WeaponTemplate">
            <controls:ContentIcon Width="70" Height="70" 
                                  BadgeUrl="{Binding Type}"
                                  BackgroundUrl="{Binding Star}" 
                                  ForegroundUrl="{Binding Source}" 
                                  Text="{Binding Name}"/>
        </DataTemplate>
    </Page.Resources>
    <s:SmoothScrollViewer Padding="12,0" Style="{StaticResource DefaultScrollViewerStyle}">
        <StackPanel>
            <TextBlock Text="今日天赋材料" Margin=" 4,0" Style="{StaticResource TitleTextBlockStyle}"/>
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="蒙德"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayMondstadtTalent.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayMondstadtTalent.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="0" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayMondstadtCharacter5}" ItemTemplate="{StaticResource CharacterTemplate}"/>
                <ui:GridView Grid.Column="0" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayMondstadtCharacter4}" ItemTemplate="{StaticResource CharacterTemplate}"/>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="璃月"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayLiyueTalent.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayLiyueTalent.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="1" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayLiyueCharacter5}" ItemTemplate="{StaticResource CharacterTemplate}"/>
                <ui:GridView Grid.Column="1" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayLiyueCharacter4}" ItemTemplate="{StaticResource CharacterTemplate}"/>

                <StackPanel Grid.Column="3" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="稻妻"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayInazumaTalent.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayInazumaTalent.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="2" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayInazumaCharacter5}" ItemTemplate="{StaticResource CharacterTemplate}"/>
                <ui:GridView Grid.Column="2" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayInazumaCharacter4}" ItemTemplate="{StaticResource CharacterTemplate}"/>
            </Grid>

            <TextBlock Text="今日武器材料" Margin="4,12,4,0" Style="{StaticResource TitleTextBlockStyle}"/>
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="蒙德"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayMondstadtWeaponAscension.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayMondstadtWeaponAscension.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="0" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayMondstadtWeapon5}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="0" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayMondstadtWeapon4}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="0" Grid.Row="3" Margin="4,2,4,0" ItemsSource="{Binding TodayMondstadtWeapon3}" ItemTemplate="{StaticResource WeaponTemplate}"/>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="璃月"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayLiyueWeaponAscension.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayLiyueWeaponAscension.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="1" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayLiyueWeapon5}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="1" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayLiyueWeapon4}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="1" Grid.Row="3" Margin="4,2,4,0" ItemsSource="{Binding TodayLiyueWeapon3}" ItemTemplate="{StaticResource WeaponTemplate}"/>

                <StackPanel Grid.Column="2" Grid.Row="0" Margin="4,0" Orientation="Horizontal">
                    <TextBlock Text="稻妻"  Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                        <c:CachedImage VerticalAlignment="Center" Width="24" Height="24" ImageUrl="{Binding TodayInazumaWeaponAscension.Source}"/>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding TodayInazumaWeaponAscension.Name}"/>
                    </StackPanel>
                </StackPanel>
                <ui:GridView Grid.Column="2" Grid.Row="1" Margin="4,6,4,0" ItemsSource="{Binding TodayInazumaWeapon5}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="2" Grid.Row="2" Margin="4,2,4,0" ItemsSource="{Binding TodayInazumaWeapon4}" ItemTemplate="{StaticResource WeaponTemplate}"/>
                <ui:GridView Grid.Column="2" Grid.Row="3" Margin="4,0,4,0" ItemsSource="{Binding TodayInazumaWeapon3}" ItemTemplate="{StaticResource WeaponTemplate}"/>
            </Grid>
        </StackPanel>
    </s:SmoothScrollViewer>
</Page>
