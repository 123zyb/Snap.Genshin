<Page x:Class="DGP.Genshin.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DGP.Genshin.Pages" 
      xmlns:controls="clr-namespace:DGP.Genshin.Controls"
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:c="clr-namespace:DGP.Genshin.Controls.Characters"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="HomePage">
    <Grid>
        <ui:ScrollViewerEx>
            <StackPanel Margin="12,0">
                <TextBlock Text="角色" Margin="0,0,0,8" VerticalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Left"/>
                <ui:GridView IsSelectionEnabled="False" Margin="6,0" ItemsSource="{Binding Characters}">
                    <ui:GridView.ItemTemplate>
                        <DataTemplate >
                            <c:CharacterItem Character="{Binding Instance}"/>
                        </DataTemplate>
                    </ui:GridView.ItemTemplate>
                </ui:GridView>

                <StackPanel Orientation="Horizontal" Margin="6,0">

                </StackPanel>

                <TextBlock Text="今日武器材料" Margin="0,8" VerticalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" Margin="6,0">

                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="6,0">

                </StackPanel>
            </StackPanel>
        </ui:ScrollViewerEx>
    </Grid>
    
</Page>
