                                        <Expander Margin="0,8,0,0" Header="风来人剑斗绮谭" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="累计积分" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding martial_legend.total_score}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="总挑战成功次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding martial_legend.total_times}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <ItemsControl Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding martial_legend.records}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,0,8" Padding="8" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="auto"/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <StackPanel HorizontalAlignment="Left">
                                                                        <TextBlock Text="{Binding challenge_name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding StringFormat="{}难度：{0} | 积分倍率：{1}">
                                                                                    <Binding Path="difficulty"/>
                                                                                    <Binding Path="score_multiple"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                    <StackPanel HorizontalAlignment="Right">
                                                                        <TextBlock Text="最高记录" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding max_score}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                                                        <TextBlock Text="联机挑战" HorizontalAlignment="Right" Margin="0,0,0,8" Visibility="{Binding is_multiplayer_online.Value,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                        <ui:DropDownButton ui:ControlHelper.CornerRadius="0" Content="挑战限制">
                                                                            <ui:DropDownButton.Flyout>
                                                                                <ui:Flyout Placement="Bottom">
                                                                                    <StackPanel>
                                                                                        <ItemsControl ItemsSource="{Binding limit_conditions}" HorizontalContentAlignment="Stretch">
                                                                                            <ItemsControl.ItemTemplate>
                                                                                                <DataTemplate>
                                                                                                    <StackPanel HorizontalAlignment="Stretch">
                                                                                                        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Text="{Binding desc}"/>
                                                                                                        <TextBlock HorizontalAlignment="Left" Text="{Binding score}"/>
                                                                                                    </StackPanel>
                                                                                                </DataTemplate>
                                                                                            </ItemsControl.ItemTemplate>
                                                                                        </ItemsControl>
                                                                                    </StackPanel>
                                                                                </ui:Flyout>
                                                                            </ui:DropDownButton.Flyout>
                                                                        </ui:DropDownButton>
                                                                    </StackPanel>

                                                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding avatars}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Margin="0,4,4,0" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                                    <Grid Width="50" Height="50">
                                                                                        <Border>
                                                                                            <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                        </Border>
                                                                                    </Grid>
                                                                                    <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding level,StringFormat={}Lv.{0}}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Expander>
                                    </DataTemplate>
                                    <DataTemplate x:Key="Chess">
                                        <Expander Margin="0,8,0,0" Header="机关奇谭·灵妙之局" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="弈棋术" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding chess.level,StringFormat={}Lv.{0}}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="总挑战成功次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding chess.total_times}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <ItemsControl Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding chess.records}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,0,8" Padding="8" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="auto"/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <TextBlock HorizontalAlignment="Left" Text="{Binding name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding gears}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <WrapPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Border Margin="4" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                                    <StackPanel Width="50">
                                                                                        <Grid Width="50" Height="50">
                                                                                            <Border>
                                                                                                <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                            </Border>
                                                                                            <Border Padding="4,0" Height="20"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                                                                                <Border.Background>
                                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                                        <GradientStop Color="#00000000"/>
                                                                                                        <GradientStop Offset="1" Color="#CC000000"/>
                                                                                                    </LinearGradientBrush>
                                                                                                </Border.Background>
                                                                                                <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" Text="{Binding number,StringFormat={}{0}个}"/>
                                                                                            </Border>
                                                                                        </Grid>
                                                                                        <TextBlock Margin="0,2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding name}" FontSize="10" TextWrapping="Wrap"/>
                                                                                    </StackPanel>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                    <ui:DropDownButton ui:ControlHelper.CornerRadius="0" Content="灵签" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="2">
                                                                        <ui:DropDownButton.Flyout>
                                                                            <ui:Flyout Placement="Bottom">
                                                                                <ItemsControl ItemsSource="{Binding cards}" HorizontalContentAlignment="Stretch">
                                                                                    <ItemsControl.ItemTemplate>
                                                                                        <DataTemplate>
                                                                                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                                                                                <c:CachedImage Width="16" Height="16" ImageUrl="{Binding icon}"/>
                                                                                                <TextBlock HorizontalAlignment="Left">
                                                                                                    <TextBlock.Text>
                                                                                                        <MultiBinding StringFormat="{}{0} * {1}">
                                                                                                            <Binding Path="name"/>
                                                                                                            <Binding Path="number"/>
                                                                                                        </MultiBinding>
                                                                                                    </TextBlock.Text>
                                                                                                </TextBlock>
                                                                                            </StackPanel>
                                                                                        </DataTemplate>
                                                                                    </ItemsControl.ItemTemplate>
                                                                                </ItemsControl>
                                                                            </ui:Flyout>
                                                                        </ui:DropDownButton.Flyout>
                                                                    </ui:DropDownButton>
                                                                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="2">
                                                                        <TextBlock Text="通关时间" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Right"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding settle_time.Value,Converter={StaticResource LongDateTimeConverter},StringFormat={}{0:yyyy.MM.dd HH:mm:ss}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Expander>
                                    </DataTemplate>
                                    <DataTemplate x:Key="Sumo">
                                        <Expander Margin="0,8,0,0" Header="百人一揆" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <ItemsControl ItemsSource="{Binding sumo.records}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Expander Margin="0,0,0,8" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                            <Expander.Header>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <StackPanel HorizontalAlignment="Left">
                                                                        <TextBlock Text="{Binding challenge_name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding StringFormat="{}难度：{0} | 积分倍率：{1}">
                                                                                    <Binding Path="difficulty"/>
                                                                                    <Binding Path="score_multiple"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                                        <TextBlock Text="最高记录" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding max_score}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                    <Border Grid.Column="2" Width="25" Height="25" Margin="12,0,0,0">
                                                                        <c:CachedImage ImageUrl="{Binding heraldry_icon}"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Expander.Header>
                                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding lineups}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="auto"/>
                                                                                <ColumnDefinition/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <ItemsControl ItemsSource="{Binding avatars}" HorizontalAlignment="Left">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <StackPanel Orientation="Horizontal"/>
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <StackPanel Margin="0,4,4,0" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                                            <Grid>
                                                                                                <Border Width="50" Height="50">
                                                                                                    <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                                </Border>
                                                                                                <Border Height="20"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                                                                                        Visibility="{Binding is_trail_avatar.Value,Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                                                    <Border.Background>
                                                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                                            <GradientStop Color="#00000000"/>
                                                                                                            <GradientStop Offset="1" Color="#CC000000"/>
                                                                                                        </LinearGradientBrush>
                                                                                                    </Border.Background>
                                                                                                    <TextBlock Text="试用" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                                                                                </Border>
                                                                                            </Grid>
                                                                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding level,StringFormat={}Lv.{0}}"/>
                                                                                        </StackPanel>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                            <ItemsControl Grid.Column="1" ItemsSource="{Binding skills}"  HorizontalAlignment="Center">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <StackPanel Orientation="Horizontal"/>
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <StackPanel Margin="0,4,4,0" Background="Transparent" ToolTipService.ToolTip="{Binding desc,Converter={StaticResource HtmlStringConverter}}">
                                                                                            <Border Width="100" Height="50">
                                                                                                <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                            </Border>
                                                                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding name}"/>
                                                                                        </StackPanel>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                        </Expander>
                    </StackPanel>
                </s:SmoothScrollViewer>
            </ui:SplitView.Pane>
            <ui:SplitView.Content>
                <ui:SplitView x:Name="CharactersSplitView" DisplayMode="Inline" FlowDirection="LeftToRight" OpenPaneLength="376">
                    <ui:SplitView.Pane>
                        <s:SmoothScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <!--角色列表-->
                            <ui:GridView 
                                    SelectionMode="Single"
                                    HorizontalAlignment="Left" 
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                                    ItemsSource="{Binding CurrentRecord.DetailedAvatars}" 
                                    SelectedItem="{Binding SelectedAvatar,Mode=TwoWay}"
                                    Padding="4,4,0,0">
                                <ui:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Background="{StaticResource SystemControlPageBackgroundChromeMediumLowBrush}">
                                            <Grid Width="70" Height="70">
                                                <Border>
                                                    <c:CachedImage ImageUrl="{Binding StarUrl}"/>
                                                </Border>
                                                <Border>
                                                    <c:CachedImage ImageUrl="{Binding Icon}"/>
                                                </Border>
                                                <Border Width="16" Height="16" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                                                    <c:CachedImage ImageUrl="{Binding ElementUrl}"/>
                                                </Border>
                                                <Border Background="#66000000" Padding="4,0" Height="16"  HorizontalAlignment="Right" VerticalAlignment="Top">
                                                    <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ActivedConstellationNum}" FontSize="10"/>
                                                </Border>
                                                <Border Padding="4,0" Height="20"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#00000000"/>
                                                            <GradientStop Offset="1" Color="#CC000000"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Name}" FontSize="10"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Level,StringFormat={}Lv.{0}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:GridView.ItemTemplate>
                            </ui:GridView>
                        </s:SmoothScrollViewer>
                    </ui:SplitView.Pane>
                    <s:SmoothScrollViewer>
                        <StackPanel Margin="0,0,8,8">
                            <!--角色名称-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                                <TextBlock HorizontalAlignment="Center" Margin="8,9" Style="{StaticResource BaseTextBlockStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} 好感度等级 - {1}">
                                            <Binding Path="SelectedAvatar.Name"/>
                                            <Binding Path="SelectedAvatar.Fetter"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                            <!--武器-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Margin="8" Width="48" Height="48" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Border>
                                        <c:CachedImage ImageUrl="{Binding SelectedAvatar.Weapon.StarUrl}"/>
                                    </Border>
                                    <Border>
                                        <c:CachedImage ImageUrl="{Binding SelectedAvatar.Weapon.Icon}"/>
                                    </Border>
                                </Grid>
                                <StackPanel Grid.Column="1">
                                    <TextBlock HorizontalAlignment="Left" Margin="0,8,8,0" Style="{StaticResource BodyTextBlockStyle}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} Lv.{1} 精炼{2}阶" TargetNullValue="">
                                                <Binding Path="SelectedAvatar.Weapon.Name"/>
                                                <Binding Path="SelectedAvatar.Weapon.Level"/>
                                                <Binding Path="SelectedAvatar.Weapon.AffixLevel"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock 
                                        HorizontalAlignment="Left" 
                                        Margin="0,12,8,8" 
                                        Text="{Binding SelectedAvatar.Weapon.ProcessedDescription}" 
                                        TextWrapping="Wrap"
                                        Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                            <!--圣遗物-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Margin="8,9,8,8" Text="圣遗物" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <ui:ListView HorizontalAlignment="Left" SelectionMode="Single" ItemsSource="{Binding SelectedAvatar.Reliquaries}" SelectedItem="{Binding SelectedReliquary,Mode=TwoWay}" Padding="0">
                                            <ui:ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Width="32" Height="32" Margin="0,6">
                                                            <Border>
                                                                <c:CachedImage ImageUrl="{Binding StarUrl}"/>
                                                            </Border>
                                                            <Border>
                                                                <c:CachedImage ImageUrl="{Binding Icon}"/>
                                                            </Border>
                                                        </Grid>
                                                        <TextBlock Margin="8,0" VerticalAlignment="Center" Grid.Column="1">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} +{1}">
                                                                    <Binding Path="Name"/>
                                                                    <Binding Path="Level"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ui:ListView.ItemTemplate>
                                        </ui:ListView>
                                        <StackPanel Margin="8,0,8,8" Grid.Column="1">
                                            <TextBlock Text="{Binding SelectedReliquary.ReliquarySet.Name}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                            <ItemsControl ItemsSource="{Binding SelectedReliquary.ReliquarySet.Affixes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,8,0,0">
                                                            <TextBlock Text="{Binding ActivationNumber,StringFormat={}{0}件套}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                            <TextBlock Text="{Binding Effect}" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap" TextTrimming="None"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            <!--命之座-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock HorizontalAlignment="Center" Margin="8,9,8,8" Text="命之座" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding SelectedAvatar.Constellations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <DataTemplate.Triggers>
                                                    
                                                </DataTemplate.Triggers>
                                                <ContentControl IsEnabled="{Binding IsActived}" Margin="0,4">
                                                    <Grid>
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsActived}" Value="False">
                                                                        <Setter Property="Opacity" Value="0.6"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Border Width="48" Height="48" Margin="4">
                                                            <c:CachedBitmapIcon UriSource="{Binding Icon}"/>
                                                        </Border>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Margin="8,4,8,0" Text="{Binding Name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                            <TextBlock Margin="8,4,8,0" Text="{Binding ProcessedEffect}" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </ContentControl>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </s:SmoothScrollViewer>
                </ui:SplitView>
            </ui:SplitView.Content>
        </ui:SplitView>
    </Grid>
</ui:Page>
