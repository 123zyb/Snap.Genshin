<Page x:Class="DGP.Genshin.Pages.RecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DGP.Genshin.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019" 
      xmlns:c="clr-namespace:DGP.Genshin.Controls.CachedImage" 
      xmlns:r="clr-namespace:DGP.Genshin.Controls.Records" xmlns:s="clr-namespace:DGP.Genshin.Controls.SmoothScrollViewer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="RecordPage">
    <Page.Resources>
        <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="Transparent"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="{x:Type ui:ListViewItem}">
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <ui:CubicBezierEase x:Key="CubicBezierEaseIn" EasingMode="EaseIn"/>
        <ui:CubicBezierEase x:Key="CubicBezierEaseOut" EasingMode="EaseOut"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ui:CommandBar Grid.Row="0">
            <ui:CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <ui:AutoSuggestBox Margin="8,4,0,0" MinWidth="240" PlaceholderText="{Binding CurrentRecord.UserId,FallbackValue=键入UID以查询}" QueryIcon="Find"
                                       TextChanged="AutoSuggestBox_TextChanged" 
                                       SuggestionChosen="AutoSuggestBox_SuggestionChosen" 
                                       QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                       GotFocus="AutoSuggestBox_GotFocus"/>
                </StackPanel>
            </ui:CommandBar.Content>
            <ui:AppBarButton Label="重新登录" Click="LoginButton_Click">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xE748;"/>
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
        </ui:CommandBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="480"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid Margin="80,0,0,0">
                    <Border>
                        <c:CachedImage Stretch="UniformToFill" SnapsToDevicePixels="True" ImageUrl="{Binding SelectedAvatar.Image}"/>
                    </Border>
                    <s:SmoothScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel Margin="0,0,0,8">
                            <!--角色名称-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top">
                                <Rectangle Opacity="0.6" Fill="{StaticResource SystemControlBackgroundChromeMediumBrush}"/>
                                <TextBlock HorizontalAlignment="Center" Margin="8,9">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} 好感度等级 - {1}">
                                            <Binding Path="SelectedAvatar.Name"/>
                                            <Binding Path="SelectedAvatar.Fetter"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                            <!--武器-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.ColumnSpan="2" Opacity="0.6" Fill="{StaticResource SystemControlBackgroundChromeMediumBrush}"/>
                                <Grid Margin="8" Width="48" Height="48" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Border>
                                        <c:CachedImage ImageUrl="{Binding SelectedAvatar.Weapon.StarUrl}"/>
                                    </Border>
                                    <Border>
                                        <c:CachedImage ImageUrl="{Binding SelectedAvatar.Weapon.Icon}"/>
                                    </Border>
                                </Grid>
                                <StackPanel Grid.Column="1">
                                    <TextBlock HorizontalAlignment="Left" Margin="0,8,0,0">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} Lv.{1} 精炼{2}阶" TargetNullValue="">
                                                <Binding Path="SelectedAvatar.Weapon.Name"/>
                                                <Binding Path="SelectedAvatar.Weapon.Level"/>
                                                <Binding Path="SelectedAvatar.Weapon.AffixLevel"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock HorizontalAlignment="Left" Margin="0,12,0,8" Text="{Binding SelectedAvatar.Weapon.ProcessedDescription}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                            <!--圣遗物-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top">
                                <Rectangle Opacity="0.6" Fill="{StaticResource SystemControlBackgroundChromeMediumBrush}"/>
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Margin="8,9,8,8" Text="圣遗物"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <ui:ListView HorizontalAlignment="Left" SelectionMode="Single" ItemsSource="{Binding SelectedAvatar.Reliquaries}" SelectedItem="{Binding SelectedReliquary,Mode=TwoWay}" Padding="0">
                                            <ui:ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Width="32" Height="32" Margin="4">
                                                            <Border>
                                                                <c:CachedImage ImageUrl="{Binding StarUrl}"/>
                                                            </Border>
                                                            <Border>
                                                                <c:CachedImage ImageUrl="{Binding Icon}"/>
                                                            </Border>
                                                        </Grid>
                                                        <TextBlock Margin="8,0" VerticalAlignment="Center" Grid.Column="1">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} +{1}">
                                                                    <Binding Path="Name"/>
                                                                    <Binding Path="Level"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ui:ListView.ItemTemplate>
                                        </ui:ListView>
                                        <StackPanel Margin="8,0" Grid.Column="1">
                                            <TextBlock Text="{Binding SelectedReliquary.ReliquarySet.Name}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                            <ui:ListView Padding="0" IsSelectionEnabled="False" ItemsSource="{Binding SelectedReliquary.ReliquarySet.Affixes}">
                                                <ui:ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,8,0,0">
                                                            <TextBlock Text="{Binding ActivationNumber,StringFormat={}{0}件套}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                            <TextBlock Text="{Binding Effect}" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ui:ListView.ItemTemplate>
                                            </ui:ListView>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            <!--命之座-->
                            <Grid Margin="8,8,8,0" VerticalAlignment="Top">
                                <Rectangle Opacity="0.6" Fill="{StaticResource SystemControlBackgroundChromeMediumBrush}"/>
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Margin="8,9,8,8" Text="命之座"/>
                                    <ui:ListView IsSelectionEnabled="False" HorizontalAlignment="Left" SelectionMode="Single" ItemsSource="{Binding SelectedAvatar.Constellations}">
                                        <ui:ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ui:ListViewItem IsEnabled="{Binding IsActived}" Margin="0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Border Width="48" Height="48" Margin="4">
                                                            <c:CachedImage RenderOptions.BitmapScalingMode="HighQuality" ImageUrl="{Binding Icon}"/>
                                                        </Border>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Margin="8,4,8,0" Text="{Binding Name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                            <TextBlock Margin="8,4,8,0" Text="{Binding ProcessedEffect}" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </ui:ListViewItem>
                                                
                                            </DataTemplate>
                                        </ui:ListView.ItemTemplate>
                                    </ui:ListView>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </s:SmoothScrollViewer>
                </Grid>
                <!--左侧角色面板-->
                <Grid x:Name="ExpandGrid" HorizontalAlignment="Left" Width="72" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ExpandGrid" 
                                                         Storyboard.TargetProperty="Width" Duration="0:0:0:0.1" To="80" EasingFunction="{StaticResource CubicBezierEaseIn}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Background="Transparent">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ExpandGrid" 
                                                         Storyboard.TargetProperty="Width" Duration="0:0:0:0.1" To="374" EasingFunction="{StaticResource CubicBezierEaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        <ui:FontIcon Margin="4" Glyph="&#xE76F;"/>
                    </Grid>
                    <s:SmoothScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ui:GridView 
                        x:Name="ExpandGridView"
                        SelectionMode="Single"
                        HorizontalAlignment="Center" 
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                        ItemsSource="{Binding CurrentRecord.DetailedAvatars}" 
                        SelectedItem="{Binding SelectedAvatar,Mode=TwoWay}"
                        Padding="0,0,-4,0">
                            <ui:GridView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Background="{StaticResource SystemControlPageBackgroundChromeMediumLowBrush}">
                                        <Grid Width="70" Height="70">
                                            <Border>
                                                <c:CachedImage ImageUrl="{Binding StarUrl}"/>
                                            </Border>
                                            <Border>
                                                <c:CachedImage ImageUrl="{Binding Icon}"/>
                                            </Border>
                                            <Border Width="16" Height="16" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                                                <c:CachedImage ImageUrl="{Binding ElementUrl}"/>
                                            </Border>
                                            <Border Background="#66000000" Padding="4,0" Height="16"  HorizontalAlignment="Right" VerticalAlignment="Top">
                                                <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ActivedConstellationNum}" FontSize="10"/>
                                            </Border>
                                            <Border Padding="4,0" Height="20"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#00000000"/>
                                                        <GradientStop Offset="1" Color="#CC000000"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Name}" FontSize="10"/>
                                            </Border>
                                        </Grid>
                                        <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Level,StringFormat={}Lv.{0}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ui:GridView.ItemTemplate>
                        </ui:GridView>
                    </s:SmoothScrollViewer>
                </Grid>
            </Grid>
            <s:SmoothScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel Margin="0,0,0,8">
                    <Expander Margin="0,8,8,0" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}" Header="数据总览">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="活跃天数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ActiveDayNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="成就达成数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AchievementNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="获得角色数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AvatarNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="3" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="深境螺旋" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.SpiralAbyss}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="华丽宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.LuxuriousChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="珍贵宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.PreciousChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="精致宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ExquisiteChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="3" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="普通宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.CommonChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="风神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AnemoculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="岩神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.GeoculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="雷神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ElectroculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="解锁传送点" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.WayPointNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="8">
                                <TextBlock HorizontalAlignment="Center" Text="解锁秘境" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.DomainNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander Margin="0,8,8,0" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}" Header="世界探索">
                        <ui:ListView IsSelectionEnabled="False" ItemsSource="{Binding CurrentRecord.PlayerInfo.WorldExplorations}" Padding="0">
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="72" Height="72">
                                            <c:CachedImage HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" Height="64" Grid.Column="0" ImageUrl="{Binding Icon}" />
                                        </Border>
                                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1">
                                            <Grid>
                                                <TextBlock HorizontalAlignment="Left" Text="{Binding Name}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding ExplorationPercentageBy10,StringFormat={}探索度 - {0}%}"/>
                                            </Grid>
                                            <ui:ProgressBar Margin="0,4" Value="{Binding ExplorationPercentage}" Minimum="0" Maximum="1000"/>
                                            <TextBlock Visibility="{Binding IsReputation,Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}级">
                                                        <Binding Path="ConvertedType"/>
                                                        <Binding Path="Level"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <ui:ListView IsSelectionEnabled="False" ItemsSource="{Binding Offerings}" Padding="0,-12">
                                                <ui:ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} - {1}级">
                                                                    <Binding Path="Name"/>
                                                                    <Binding Path="Level"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ui:ListView.ItemTemplate>
                                            </ui:ListView>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                    </Expander>
                    <Expander Margin="0,8,8,0" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}" Header="尘歌壶">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="信任等阶" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].Level}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="最高洞天仙力" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].ComfortNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="获得摆设数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].ItemNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="3" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="历史访客数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].VisitNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock HorizontalAlignment="Center" Text="解锁洞天" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <ui:GridView IsSelectionEnabled="False" ItemsSource="{Binding CurrentRecord.PlayerInfo.Homes}" HorizontalAlignment="Center" Padding="0" Margin="0,0,-4,0">
                                <ui:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4">
                                            <TextBlock Text="{Binding Name}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ui:GridView.ItemTemplate>
                            </ui:GridView>
                        </StackPanel>
                    </Expander>
                    <Expander Margin="0,8,8,0" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumBrush}" Header="上期深境螺旋">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="最深抵达" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.LastSpiralAbyss.MaxFloor}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="战斗次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.LastSpiralAbyss.TotalBattleTimes}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="胜利次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.LastSpiralAbyss.TotalWinTimes}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="3" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="渊星" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.LastSpiralAbyss.TotalStar}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="出战次数" HorizontalAlignment="Center"/>
                            <ui:GridView IsSelectionEnabled="False" Margin="0,4,0,0" HorizontalAlignment="Center" ItemsSource="{Binding CurrentRecord.LastSpiralAbyss.RevealRank}">
                                <ui:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Grid>
                                                <!--use RenderOptions.BitmapScalingMode to get rid of the unbearable aliasing-->
                                                <Border Width="64" Height="64">
                                                    <c:CachedImage RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" ImageUrl="{Binding StarUrl}"/>
                                                </Border>
                                                <Border Width="64" Height="64">
                                                    <c:CachedImage RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" ImageUrl="{Binding AvatarIcon}"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Value,StringFormat={}{0}次}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:GridView.ItemTemplate>
                            </ui:GridView>
                            <TextBlock Text="击破数" HorizontalAlignment="Center"/>
                            <ui:GridView IsSelectionEnabled="False" Margin="0,4,0,0" HorizontalAlignment="Center" ItemsSource="{Binding CurrentRecord.LastSpiralAbyss.DefeatRank}">
                                <ui:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Grid>
                                                <!--use RenderOptions.BitmapScalingMode to get rid of the unbearable aliasing-->
                                                <Border Width="32" Height="32">
                                                    <c:CachedImage RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" ImageUrl="{Binding AvatarIcon}"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:GridView.ItemTemplate>
                            </ui:GridView>
                            <TextBlock Text="最强一击" HorizontalAlignment="Center"/>
                            <ui:GridView IsSelectionEnabled="False" Margin="0,4,0,0" HorizontalAlignment="Center" ItemsSource="{Binding CurrentRecord.LastSpiralAbyss.DamageRank}">
                                <ui:GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Grid>
                                                <!--use RenderOptions.BitmapScalingMode to get rid of the unbearable aliasing-->
                                                <Border Width="32" Height="32">
                                                    <c:CachedImage RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" ImageUrl="{Binding AvatarIcon}"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:GridView.ItemTemplate>
                            </ui:GridView>
