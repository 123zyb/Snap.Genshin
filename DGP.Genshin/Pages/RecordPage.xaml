<ui:Page x:Class="DGP.Genshin.Pages.RecordPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:DGP.Genshin.Pages"
         xmlns:ui="http://schemas.modernwpf.com/2019" 
         xmlns:c="clr-namespace:DGP.Genshin.Controls.CachedImage" 
         xmlns:r="clr-namespace:DGP.Genshin.Controls.Records" 
         xmlns:s="clr-namespace:DGP.Genshin.Controls.SmoothScrollViewer" 
         xmlns:converters="clr-namespace:DGP.Genshin.Controls.Converters" 
         xmlns:mihoyo="clr-namespace:DGP.Genshin.Models.MiHoYo" 
         xmlns:controls="clr-namespace:DGP.Genshin.Controls"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="1200"
         Title="RecordPage" Loaded="Page_Loaded">
    <Page.Resources>
        <mihoyo:HtmlStringConverter x:Key="HtmlStringConverter"/>
        <converters:LongDateTimeConverter x:Key="LongDateTimeConverter"/>
        <ui:CubicBezierEase x:Key="CubicBezierEaseIn" EasingMode="EaseIn"/>
        <ui:CubicBezierEase x:Key="CubicBezierEaseOut" EasingMode="EaseOut"/>
        <r:ActivityTemplateSelector x:Key="ActivityTemplateSelector"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ui:CommandBar Grid.Row="0">
            <ui:CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <ui:AutoSuggestBox x:Name="QueryAutoSuggestBox" 
                                       Margin="8,4,0,0" 
                                       MinWidth="240" 
                                       PlaceholderText="键入UID以查询" 
                                       QueryIcon="Find"
                                       TextChanged="AutoSuggestBox_TextChanged" 
                                       SuggestionChosen="AutoSuggestBox_SuggestionChosen" 
                                       QuerySubmitted="AutoSuggestBox_QuerySubmitted"/>
                    <ui:ProgressRing x:Name="RequestingProgressRing" Margin="12,4,0,0"/>
                    <TextBlock x:Name="RequestingProgressText" Margin="12,4,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </ui:CommandBar.Content>
        </ui:CommandBar>
        <s:SmoothScrollViewer Grid.Row="1" Padding="0,0,4,0">
            <Grid Margin="12,4,12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,12,6,0" VerticalAlignment="Top">
                    <Border Tag="Stats" Padding="8" 
                        VerticalAlignment="Top"
                        CornerRadius="{StaticResource CompatCornerRadius}"
                        Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                        <StackPanel>
                            <TextBlock Text="基本信息" HorizontalAlignment="Center" Margin="0,0,0,8" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="活跃天数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ActiveDayNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="成就达成数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AchievementNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="获得角色数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AvatarNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="3" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="深境螺旋" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.SpiralAbyss}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="华丽宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.LuxuriousChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="珍贵宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.PreciousChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="精致宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ExquisiteChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="3" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="普通宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.CommonChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="奇馈宝箱数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.MagicChestNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="风神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.AnemoculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="岩神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.GeoculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="雷神瞳" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.ElectroculusNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="解锁传送点" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.WayPointNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="4" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="解锁秘境" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.PlayerStat.DomainNumber}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                    </Border>
                    <Border Tag="HomeWorld" Padding="8" Margin="0,12,0,0"
                            CornerRadius="{StaticResource CompatCornerRadius}"
                            Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                        <StackPanel>
                            <TextBlock Text="尘歌壶信息" HorizontalAlignment="Center" Margin="0,0,0,8" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="信任等阶" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].Level}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="最高洞天仙力" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].ComfortNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="获得摆设数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].ItemNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="3" Margin="8">
                                    <TextBlock HorizontalAlignment="Center" Text="历史访客数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentRecord.PlayerInfo.Homes[0].VisitNum}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock HorizontalAlignment="Center" Text="已解锁的洞天" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <ItemsControl ItemsSource="{Binding CurrentRecord.PlayerInfo.Homes}" HorizontalAlignment="Center" Padding="0" Margin="0,0,-4,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4">
                                            <TextBlock Text="{Binding Name}" Style="{StaticResource BodyTextBlockStyle}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="6,12,0,0" VerticalAlignment="Top">
                    <Border Tag="Explore" Padding="8" 
                        CornerRadius="{StaticResource CompatCornerRadius}"
                        Background="{StaticResource SystemControlBackgroundChromeMediumBrush}">
                        <StackPanel>
                            <TextBlock Text="世界探索" HorizontalAlignment="Center" Margin="0,0,0,8" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ItemsControl ItemsSource="{Binding CurrentRecord.PlayerInfo.WorldExplorations}" Padding="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="64" Height="64">
                                                <c:CachedBitmapIcon HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" UriSource="{Binding Icon}" />
                                            </Border>
                                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Margin="8,0,0,0">
                                                <Grid>
                                                    <TextBlock HorizontalAlignment="Left" Text="{Binding Name}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Right" Text="{Binding ExplorationPercentageBy10,StringFormat={}探索度 - {0}%}"/>
                                                </Grid>
                                                <ui:ProgressBar Margin="0,4" Value="{Binding ExplorationPercentage}" Minimum="0" Maximum="1000"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="0,0,12,0" Visibility="{Binding IsReputation,Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0} - {1}级">
                                                                <Binding Path="ConvertedType"/>
                                                                <Binding Path="Level"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <ItemsControl ItemsSource="{Binding Offerings}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="{}{0} - {1}级">
                                                                            <Binding Path="Name"/>
                                                                            <Binding Path="Level"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    <Expander Margin="0,12,0,0" Padding="8" 
                        VerticalAlignment="Top"
                        Background="{StaticResource SystemControlBackgroundChromeMediumBrush}"
                        >
                        <Expander.Header>
                            <TextBlock Text="活动信息" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </Expander.Header>
                        <StackPanel>
                            <ItemsControl 
                                    ItemsSource="{Binding CurrentRecord.Activities.activities}" 
                                    ItemTemplateSelector="{StaticResource ActivityTemplateSelector}">
                                <ItemsControl.Resources>
                                    <DataTemplate x:Key="Default">
                                        <Expander Margin="0,8,0,0" Header="未知的活动" IsEnabled="False" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                        </Expander>
                                    </DataTemplate>
                                    <DataTemplate x:Key="Effigy">
                                        <Expander Margin="0,0,0,0" Header="无相交响诗" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="累计积分" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding effigy.total_score}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="总挑战成功次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding effigy.total_times}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>

                                                <ItemsControl Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding effigy.records}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,0,8" Padding="8" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="auto"/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <StackPanel HorizontalAlignment="Left">
                                                                        <TextBlock Text="{Binding challenge_name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding StringFormat="{}难度：{0} | 积分倍率：{1}">
                                                                                    <Binding Path="difficulty"/>
                                                                                    <Binding Path="score_multiple"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                    <StackPanel HorizontalAlignment="Right">
                                                                        <TextBlock Text="最高记录" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding max_score}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                                                        <TextBlock Text="联机挑战" HorizontalAlignment="Right" Margin="0,0,0,8" Visibility="{Binding is_multiplayer_online.Value,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                        <ui:DropDownButton ui:ControlHelper.CornerRadius="0" Content="挑战限制">
                                                                            <ui:DropDownButton.Flyout>
                                                                                <ui:Flyout Placement="Bottom">
                                                                                    <ItemsControl ItemsSource="{Binding limit_conditions}" HorizontalContentAlignment="Stretch">
                                                                                        <ItemsControl.ItemTemplate>
                                                                                            <DataTemplate>
                                                                                                <StackPanel HorizontalAlignment="Stretch">
                                                                                                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Text="{Binding desc}"/>
                                                                                                    <TextBlock HorizontalAlignment="Left" Text="{Binding score}"/>
                                                                                                </StackPanel>
                                                                                            </DataTemplate>
                                                                                        </ItemsControl.ItemTemplate>
                                                                                    </ItemsControl>
                                                                                </ui:Flyout>
                                                                            </ui:DropDownButton.Flyout>
                                                                        </ui:DropDownButton>
                                                                    </StackPanel>

                                                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding avatars}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Margin="0,4,4,0" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                                    <Grid Width="50" Height="50">
                                                                                        <Border>
                                                                                            <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                        </Border>
                                                                                    </Grid>
                                                                                    <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding level,StringFormat={}Lv.{0}}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Expander>
                                    </DataTemplate>
                                    <DataTemplate x:Key="Mechanicus">
                                        <Expander Margin="0,8,0,0" Header="机关奇谭" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="累计获得奇术符" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding mechanicus.total_score}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="8">
                                                    <TextBlock HorizontalAlignment="Center" Text="挑战成功次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding mechanicus.total_times}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                </StackPanel>
                                                <ItemsControl Margin="0,0,0,8" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding mechanicus.gears}" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel></WrapPanel>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="16,8" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                <StackPanel Width="50">
                                                                    <Grid Width="50" Height="50">
                                                                        <Border>
                                                                            <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                        </Border>
                                                                        <Border Padding="4,0" Height="20"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                                                            <Border.Background>
                                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                    <GradientStop Color="#00000000"/>
                                                                                    <GradientStop Offset="1" Color="#CC000000"/>
                                                                                </LinearGradientBrush>
                                                                            </Border.Background>
                                                                            <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" Text="{Binding level,StringFormat={}Lv.{0}}"/>
                                                                        </Border>
                                                                    </Grid>
                                                                    <TextBlock Margin="0,2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding name}" FontSize="10" TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <ItemsControl Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding mechanicus.records}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,0,0,8" Padding="8" Background="{StaticResource SystemControlPageBackgroundListLowBrush}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="auto"/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <StackPanel HorizontalAlignment="Left">
                                                                        <TextBlock Text="{Binding name}" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                                                                            <TextBlock.Text>
                                                                                <MultiBinding StringFormat="{}难度：{0} | 积分倍率：{1}">
                                                                                    <Binding Path="difficulty"/>
                                                                                    <Binding Path="score_multiple"/>
                                                                                </MultiBinding>
                                                                            </TextBlock.Text>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                    <StackPanel HorizontalAlignment="Right">
                                                                        <TextBlock Text="总计奇术符" Style="{StaticResource BaseTextBlockStyle}"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding score}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding avatars}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <StackPanel Margin="0,4,4,0" Background="{StaticResource SystemControlPageBackgroundChromeLowBrush}">
                                                                                    <Grid Width="50" Height="50">
                                                                                        <Border>
                                                                                            <c:CachedImage ImageUrl="{Binding icon}"/>
                                                                                        </Border>
                                                                                    </Grid>
                                                                                    <TextBlock Margin="0,2,0,0" HorizontalAlignment="Center" Text="{Binding level,StringFormat={}Lv.{0}}"/>
                                                                                </StackPanel>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1">
                                                                        <TextBlock Text="通关时间" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Right"/>
                                                                        <TextBlock HorizontalAlignment="Right" Text="{Binding settle_time.Value,Converter={StaticResource LongDateTimeConverter},StringFormat={}{0:yyyy.MM.dd HH:mm:ss}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Expander>
                                    </DataTemplate>
                                    <DataTemplate x:Key="FleurFair">
                                        <StackPanel>
                                            <Expander Margin="0,8,0,0" Header="风花的邀约·庆典挑战" Padding="8" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Margin="8">
                                                        <TextBlock HorizontalAlignment="Center" Text="累计积分" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                        <TextBlock HorizontalAlignment="Center" Text="{Binding fleur_fair.fleur_fair_gallery.total_score}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Margin="8">
                                                        <TextBlock HorizontalAlignment="Center" Text="总挑战成功次数" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                        <TextBlock HorizontalAlignment="Center" Text="{Binding fleur_fair.fleur_fair_gallery.total_times}" FontSize="20" Style="{StaticResource BodyTextBlockStyle}"/>
                                                    </StackPanel>

