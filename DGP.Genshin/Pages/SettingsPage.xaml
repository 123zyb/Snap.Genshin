<Page x:Class="DGP.Genshin.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:s="clr-namespace:DGP.Genshin.Controls.SmoothScrollViewer" 
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="1600" 
      d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="设置">
    <Page.Resources>
    </Page.Resources>
    <Grid>
        <s:SmoothScrollViewer Margin="0,0,0,0">
            <StackPanel Margin="0,0,0,12">
                <Expander Margin="12,12,16,0" IsExpanded="True">
                    <Expander.Header>
                        <TextBlock Text="重要信息" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <TextBlock Text="本App可能包含尚未发布的角色或武器等物品信息" Foreground="Red" 
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="均为第三方泄露开发中内容，请以正式服上线为准" Foreground="Red" 
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="外观" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeChangeRequested" ui:ControlHelper.Header="选择应用的颜色">
                            <ComboBoxItem Content="浅色"/>
                            <ComboBoxItem Content="深色(推荐)"/>
                            <ComboBoxItem Content="跟随系统"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="数据与隐私" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <TextBlock Text="米游社Cookie"/>
                        <Button Content="重置Cookie" Margin="0,12,0,0" Click="ResetCookieButtonClick"/>
                        <ui:ToggleSwitch Margin="0,12,0,0" Header="祈愿记录显示完整的UID" IsOn="{Binding SettingModel.ShowFullUID}"/>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="反馈" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <TextBlock Text="如果你在使用软件的过程中遇到问题，可以" Style="{StaticResource BodyTextBlockStyle}"/>
                        <ui:HyperlinkButton NavigateUri="https://github.com/DGP-Studio/Snap.Genshin/issues/new" 
                                            Content="前往 Github 提交 Issue"/>
                        <ui:HyperlinkButton NavigateUri="https://qm.qq.com/cgi-bin/qm/qr?k=K1OglMXZGd-ulewzRDdFOYnSfMBOoNiT&amp;jump_from=webapi" 
                                            Content="前往QQ群[910780153]反馈"/>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="关于" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <TextBlock Text="Snap 原神" Style="{StaticResource BaseTextBlockStyle}"/>
                        <TextBlock Text="{Binding VersionString}" Margin="0,6,0,8" Style="{StaticResource BodyTextBlockStyle}"/>
                        <Button Tag="Github" Content="检查更新并安装" Click="UpdateRequestedAsync"/>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="第三方" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <StackPanel.Resources>
                            <system:Double x:Key="GridWidth">240</system:Double>
                            <system:Double x:Key="GridHeight">120</system:Double>
                        </StackPanel.Resources>
                        <TextBlock Text="界面" Style="{StaticResource BodyTextBlockStyle}" Margin="8,0,0,0" FontSize="18"/>
                        <ItemsControl>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="ModernWpf" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="Kinnara" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="基础现代化界面库" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/Kinnara/ModernWpf" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="KeqingNiuza" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="Scighost" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="祈愿记录用户界面参考了此项目的布局" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/Scighost/KeqingNiuza" 
                                                Content="项目源代码"/>
                            </Grid>
                        </ItemsControl>
                        <TextBlock Text="数据交互" Style="{StaticResource BodyTextBlockStyle}" Margin="8,0,0,0" FontSize="18"/>
                        <ItemsControl>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Newtonsoft.Json" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="JamesNK" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="Json数据解析库" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/JamesNK/Newtonsoft.Json" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="octokit.net" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="octokit" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="Github API 官方封装库" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/octokit/octokit.net" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="EPPlus" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="EPPlusSoftware" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="Excel文件操作库" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/EPPlusSoftware/EPPlus" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Honey Impact" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="Honey" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="角色与武器数据大部分采集自此网站" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://g-hhw.com" 
                                                Content="前往网站"/>
                            </Grid>
                        </ItemsControl>
                        <TextBlock Text="模块化功能" Style="{StaticResource BodyTextBlockStyle}" Margin="8,0,0,0" FontSize="18"/>
                        <ItemsControl>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="GenshinPlayerQuery" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="Azure99" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="玩家信息查询功能参考并使用了此项目的部分代码" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/Azure99/GenshinPlayerQuery" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Genshin Gacha Export" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="sunfkny" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="祈愿记录查询功能参考了此项目的部分代码" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/sunfkny/genshin-gacha-export" 
                                                Content="项目源代码"/>
                            </Grid>
                            <Grid Width="{StaticResource GridWidth}" Height="{StaticResource GridHeight}" Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="GenshinDailyHelper" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock Grid.Row="1" Text="yinghualuowu" Opacity="0.8" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Grid.Row="2" Text="米游社每日签到功能参考了此项目的部分代码" Margin="0,4,0,0" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                <ui:HyperlinkButton Grid.Row="3" NavigateUri="https://github.com/yinghualuowu/GenshinDailyHelper" 
                                                Content="项目源代码"/>
                            </Grid>
                        </ItemsControl>
                    </StackPanel>
                </Expander>
                <Expander Margin="12,12,16,0">
                    <Expander.Header>
                        <TextBlock Text="开发者" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Expander.Header>
                    <StackPanel>
                        <TextBlock Text="下方按钮仅供开发人员调试使用" Foreground="DarkRed" Margin="0,0,0,0" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="在Github上提交的下方工具或模块的错误不会修复" Foreground="DarkRed" Margin="0,0,0,0" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="点击下方按钮表示您愿意承担可能造成的损失" Foreground="Red" Margin="0,4,0,8" Style="{StaticResource BodyTextBlockStyle}"/>
                        <Button Content="数据管理页面" Click="NavigateToManagePage"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </s:SmoothScrollViewer>
    </Grid>
</Page>
