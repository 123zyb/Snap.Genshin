<Window x:Class="DGP.Snap.GenshinImpact.GachaStatistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGP.Snap.GenshinImpact.GachaStatistics"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        xmlns:views="clr-namespace:DGP.Snap.GenshinImpact.GachaStatistics.Views"
        mc:Ignorable="d"
        Title="原神祈愿统计" 
        Height="450" 
        Width="800"
        ui:WindowHelper.UseModernWindowStyle="True"
        Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="常驻祈愿" >
            </TabItem>
            <TabItem Header="新手祈愿">
            </TabItem>
            <TabItem Header="角色活动祈愿">
                <!--<views:RoleUpGachaView/>-->
            </TabItem>
            <TabItem Header="武器活动祈愿">
            </TabItem>
            <TabItem Header="总计">
            </TabItem>

        </TabControl>
        <ui:ContentDialog x:Name="AuthKeyDialog" Title="获取信息中...">
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="请登陆原神并至少打开一次任意祈愿记录界面"/>
        </ui:ContentDialog>

    </Grid>
    
</Window>
